LIBNAME		= @LIBNAME@
MAJOR		= @LIB_MAJOR@
MINOR		= @LIB_MINOR@
BUILD		= @LIB_BUILD@

CC		= @CC@ 
CXX		= @CXX@ 
LD		= @CXX@ 
AR		= @AR@
RANLIB		= @RANLIB@
DOXYGEN		= @DOXYGEN@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
BINDIR		= @bindir@
INCDIR		= @includedir@
LIBDIR		= @libdir@

INSTALLDIR	= ${INSTALL} -d
INSTALLLIB	= ${INSTALL} -p -m 644
INSTALLEXE	= ${INSTALL} -p -m 755
INSTALLDATA	= ${INSTALL} -p -m 644

CWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wno-cast-align \
		-Wcast-qual -Wwrite-strings -Wshadow -Wredundant-decls @SYSWARNS@
CXXWARNOPTS	= ${CWARNOPTS} -Wconversion -Wsign-promo -Wsynth -Woverloaded-virtual
PROCESSOR_OPTS	=@PROCESSOR_OPTS@
INLINE_OPTS	=@INLINE_OPTS@
CUSTOMINCDIR	=@CUSTOMINCDIR@
CUSTOMLIBDIR	=@CUSTOMLIBDIR@

#BUILD_SHARED	= 1
#BUILD_STATIC	= 1
#DEBUG		= 1
#PROFILE	= 1
#STANDALONE	= -nodefaultlibs

CFLAGS		= @CFLAGS@ \
		${CUSTOMINCDIR} ${PROCESSOR_OPTS} ${CWARNOPTS} ${STANDALONE}
CXXFLAGS	= @CXXFLAGS@ \
		${CUSTOMINCDIR} ${PROCESSOR_OPTS} ${INLINE_OPTS} \
		${CXXWARNOPTS} ${STANDALONE}
LDFLAGS		= @LDFLAGS@ ${CUSTOMLIBDIR} ${STANDALONE}
ifdef DEBUG
    CFLAGS	+= -O0 -g
    CXXFLAGS	+= -O0 -g
else
    CFLAGS	+= -O3 -DNDEBUG=1
    CXXFLAGS	+= -O3 -DNDEBUG=1
    LDFLAGS	+= 
endif
ifdef PROFILE
    CFLAGS	+= -pg
    CXXFLAGS	+= -pg
    LDFLAGS	+= -pg
endif
ifdef STANDALONE
    LIBS	+= @libsupc++@ @libgcc@ @libgcc_eh@ @libc@
endif
SHBLDFL		= @SHBLDFL@

LIBA		= lib${LIBNAME}.a
LIBSO		= lib${LIBNAME}.so
ifdef MAJOR
LIBSOLNK	= ${LIBSO}.${MAJOR}
LIBSOBLD	= ${LIBSO}.${MAJOR}.${MINOR}.${BUILD}
endif
TOCLEAN		+= ${LIBSO} ${LIBA} ${LIBSOBLD}

